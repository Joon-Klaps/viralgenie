        //     }

        //     withName: '.*:FASTA_FASTQ_BOWTIE2_METABAT2.*:SAMTOOLS_INDEX' {
        //         ext.prefix = { "${meta.id}.indexed" }
        //         publishDir = [
        //                 path: { "${params.outdir}/polishing/samtools/index" },
        //                 mode: params.publish_dir_mode,
        //                 enabled: params.save_intermediate_polishing,
        //                 pattern: "*.bai"
        //             ]
        //     }

        //     withName: '.*:FASTA_FASTQ_BOWTIE2_METABAT2.*:BAM_STATS_SAMTOOLS:.*' {
        //         publishDir = [
        //             path: { "${params.outdir}/polishing/samtools/stats" },
        //             mode: params.publish_dir_mode,
        //             enabled: params.save_intermediate_polishing,
        //             pattern: '*{stats,flagstat,idxstats}'
        //         ]
        //     }

        //     withName: METABAT2_JGISUMMARIZEBAMCONTIGDEPTHS {
        //         ext.prefix = { "${meta.id}-depth" }
        //         publishDir = [
        //             path: { "${params.outdir}/polishing/MetaBAT2/depths" },
        //             mode: params.publish_dir_mode,
        //             pattern: '*-depth.txt.gz'
        //         ]
        //     }

        //     withName: METABAT2_METABAT2 {
        //         publishDir = [
