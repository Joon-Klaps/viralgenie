        //             mode: params.publish_dir_mode,
        //             enabled: params.save_intermediate_polishing,
        //             pattern: "*.log"
        //         ]
        //     }

        //     withName: '.*:FASTA_FASTQ_BOWTIE2_METABAT2.*:SAMTOOLS_SORT' {
        //         ext.prefix = { "${meta.id}.sorted" }
